<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Интернет-провайдер 'СвязьСервис'"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Информация о компании -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Надежный интернет для дома и бизнеса. Работаем с 2010 года. Подключение бесплатно!"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Тарифы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Наши тарифы:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tariffsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Кнопка оплаты -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/paymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оплатить услуги"
            android:textSize="16sp"
            app:backgroundTint="#2196F3"
            android:layout_marginBottom="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="8dp" />

        <!-- Кнопка связи -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Написать нам"
            android:textSize="16sp"
            app:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
